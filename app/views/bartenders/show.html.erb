<% languages = [] %>
<% 1.upto(5) do |i|  %>
  <% languages << @bartender.read_attribute("language_#{i}") if @bartender.read_attribute("language_#{i}") %>
<% end %>




<div class="container">
 <div class="wrapper-show">


  <div class="row">
    <div class="col-xs-4 profile-details">
      <%= image_tag 'AvatarTom.png', class: 'avatar-largest' %>
      <br><br>
      <p>Rating:
        <% @bartender.rating.times do %>
        <i class="fa fa-glass" aria-hidden="true"></i>
        <% end %>
      </p>
      <h4 class= ""> Location: <%= @bartender.location %> </h4>
      <p class= ""> Languages: </p>
      <p> <%= languages.join(', ') %> </p>
    </div>

    <div class="col-xs-4 profile-basics">
      <h2 class= ""> <%= @bartender.name %> </h2>
      <h4 class= ""> <%= @bartender.title %> </h4>
      <p class= ""> <%= @bartender.bio %> </p>
      <br>
      <br>

    </div>
    <div class="col-xs-4 booking-basics">
      <h2 class= ""> yo yo</h2>
      <div class="btn button-add-event">Add To My Event</div>
      <div class="btn button-message">Send a Message</div>
      <div class="btn button-favorites">Add to Favorites</div>
      <br>

      <%= link_to new_user_session_path do %>
       <div class="btn button-home"> BOOK ME! </div>
      <% end %>
    </div>

  </div>

  <br>
  <br>
  <br>

  <div class="row">
    <div class="specialities text-center">
      <div class= "header">
        <h1> Check out my favorites</h1>
      </div>
      <br><br><br>
      <div class= "content">
        <% 1.upto(3) do |i|  %>
          <%= image_tag @bartender.read_attribute("speciality_#{i}"), class: 'avatar-largest' %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-9 rating-basics">
      <table class="table">
        <thead>
          <tr>
            <th class="col-md-3"></th>
            <th class="col-md-9"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <h4>(username)</h4>
              <p>(date of submission)</p>
            </td>
            <td>
              (add div or rating system)
              <p>loved the food</p>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>


</div>
</div>

