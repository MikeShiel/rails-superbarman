<div class="show-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.2) 0%, rgba(0,36,61,0.3) 50%), url(<%= image_url 'london2.jpg' %>);"></div>

<div class="container">
 <div class="wrapper-show">


  <div class="row">
    <!-- LEFT COLUMN -->
    <div class="col-xs-8 profile-details">

      <!-- PROFILE -->
      <div class="row">
        <div class="col-xs-6">
          <%= image_tag @bartender.picture, class: 'avatar-largest', id: "cropped_avatar"%>
        </div>
        <br>
        <div class="col-xs-6">
           <h4 class= ""> <%= @bartender.title %> </h4>
          <div class="row">
            <div class="col-xs-6">
              <h4 class= ""> Location: <%= @bartender.location %> </h4>
            </div>
            <div class="col-xs-6">
              <p>Rating:
                <% @bartender.rating.times do %>
                <i class="fa fa-glass" aria-hidden="true"></i>
                <% end %>
              </p>
            </div>
          </div>
          <br>
          <br>
        </div>
      </div>

      <!-- SPECIALTIES -->
      <div class=" profile-block specialities">
        <div class= "header">
          <h2>Specialities</h2>
        </div>
        <div class= "content">
          <% @bartender.cocktails.each do |cocktail|  %>
          <div class="specialities-item">
            <%= image_tag cocktail.picture, class: 'avatar-cocktail' %>
            <div><%= cocktail.name %></div>
          </div>
          <% end %>
        </div>
      </div>



      <!-- LANGUAGES -->
      <div class="profile-block languages">
        <div class= "header">
          <h2>Languages</h2>
        </div>
        <div class= "content">
          <%# This is how you would add the flags, after adding the image files to assets %>
          <% @bartender.languages.split.each do |language| %>
            <%= image_tag "#{language}.png", size: "120x120" %>
          <% end %>

          <%# if you remove the following line, don't forget to remove lines 1 to 4 of this file, where language array is created %>

        </div>
      </div>



      <!-- BIO -->
      <div class="profile-block bio">
        <div class= "header">
          <h2>Bio</h2>
        </div>
        <div class= "content">
          <p class= ""> <%= @bartender.bio %> </p>
        </div>
      </div>



      <!-- REVIEWS -->
      <div class="profile-block reviews">
        <div class= "header">
          <h2>Reviews</h2>
        </div>
        <div class= "content">
          <% unless @bartender.reviews.map(&:content).all?(&:nil?)  %>
            <ul class="no-bullets">
              <% @bartender.reviews.each do |review| %>
              <li>
                <% unless review.rating.nil? %>
                <ul class="list-inline no-bullets">
                  <% review.rating.times do %>
                  <li> <i class="fa fa-glass golder" aria-hidden=true> </i></li>
                  <% end %>
                  <% (5 - review.rating).times do %>
                  <li> <i class="fa fa-glass blacker" aria-hidden=true> </i></li>
                  <% end %>
                </ul>
              </li>
              <li> <%= review.content %> </li>
              <br><hr><br>
              <% end %>
              <% end %>
            </ul>
          <% end %>


          <div class="reviews">
            <%= render 'reviews/new' %>
          </div>
        </div>
      </div>

    </div>

    <!-- RIGHT COLUMN -->
    <div class="col-xs-3 booking-basics">
      <h2 class= ""> Book Your Bartender</h2>
      <%= render 'bartenders/show/form' %>
    </div>

  </div>

  <br>





