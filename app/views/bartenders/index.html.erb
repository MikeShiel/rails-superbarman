
<div class="container">
  <div class="row">
    <form action="/bartenders/search" class="form-inline" id="form-index">
      <input type="text" placeholder="Location" name="location_query" class="form-control input">

      <select name="type-of-party" id="type-of-party" class="form-control">
        <option value="1">Party</option>
        <option value="2">Birthday</option>
        <option value="3">Hen/Stag do</option>
        <option value="4">Leaving do</option>
        <option value="5">House Warming</option>
        <option value="6">Wedding</option>
      </select>

      <select name="number-of-guests" id="number-of-guests" class="form-control">
        <option value="1">5-29</option>
        <option value="2">30-59</option>
        <option value="3">60-90</option>
      </select>


      <button type="submit" class="form-control btn-search">
        <i class="fa fa-search"></i>
      </button>
    </form>
  </div>

  <div class="row">

    <% @bartenders.each_with_index do |bartender, i| %>
    <%= link_to(bartender) do %>
    <div class="col-xs-12 col-sm-6 col-lg-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_url i+1 %>');">
        <div class="card-category">
          <%= bartender.title %>
        </div>
        <div class="card-description">
          <p>
            <%= bartender.name %> <br>
            <% bartender.rating.times do %>
            <i class="fa fa-glass" aria-hidden="true"></i>
            <% end %>
          </p>
        </div>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
</div>















