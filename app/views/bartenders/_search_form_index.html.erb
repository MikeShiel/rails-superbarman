<%= simple_form_for @party, url: "/bartenders/search", method: :get do |f| %>
  <%= f.input :address, label: false, placeholder: 'Location', wrapper_html: { class: '' }, input_html: { class: "input form-input-index" } %>

  <div class="">
    <%= f.input :theme, collection: Party::TYPES, label: false, prompt: "Type of Party", input_html: { class: "input form-input-index" } %>
  </div>

  <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>

  <div class="">
    <%= button_tag type: :submit, class: "btn-search", id: 'btn-search-index' do %>
      <i class="fa fa-search"></i>
    <% end %>
  </div>
<% end %>


<script type="text/javascript">

  function initialize() {

  var input = document.getElementById('party_address');
  var autocomplete = new google.maps.places.Autocomplete(input);
  }

  google.maps.event.addDomListener(window, 'load', initialize);
</script>
