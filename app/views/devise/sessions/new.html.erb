
<br><br><br>

<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">
      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>

          <% if OmniAuth::Utils.camelize(provider) == 'Facebook' %>
            <% btn_class = "btn-facebook" %>
            <% icon = "fa fa-facebook" %>
          <% else %>
            <% btn_class = "" %>
          <% end %>

          <%= link_to omniauth_authorize_path(resource_name, provider), class: btn_class do %>
            <i class="<%= icon %>"></i>
            <%= "Log in with #{OmniAuth::Utils.camelize(provider)}" %>
          <% end %>

          <div class="or-separator">
            <span class="h6 or-separator-text">or</span>
            <hr>
          </div>

          <br>

        <% end -%>
      <% end -%>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, label: false  do %>
            <%= f.input_field :email, placeholder: 'Email Adress', class: 'form-control' %>
            <i class="fa fa-envelope"></i>
          <% end %>
          <%= f.input :password, label: false  do %>
            <%= f.input_field :password, placeholder: "Password", class: 'form-control password' %>
            <i class="fa fa-unlock-alt" aria-hidden="true"></i>
          <% end %>
        </div>

        <div class="form-under">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'pull-right forget-password' %>
          <% end -%>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: 'btn-login' %>
        </div>
      <% end %>

      <hr>

      <div class="new-account">
        <h5>New Account?</h5>

        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Register", new_registration_path(resource_name), class: 'btn-register text-center' %>
        <% end -%>
      </div>

    </div>
  </div>
</div>
